{
    "manifest_version": 2,
    "name": "Discussify",
    "short_name": "Discussify",
    "description": "Discuss the web",
    "version": "0.0.0",
    "homepage_url": "https://discussify.io/",
    "permissions": [
        "<all_urls>",
        "storage",
        "tabs"
    ],
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
    "background": {
        "persistent": true,
        "scripts": [
            "build/background.js"
        ]
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "all_frames": true,
            "js": [
                "build/content-script.js"
            ]
        }
    ]
}
